<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputField" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/dark</item>
        <item name="colorControlNormal">@color/light</item>
        <item name="colorControlActivated">@color/light</item>
    </style>
</resources>

